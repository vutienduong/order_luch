<table class="table table-hover table-stripped">
  <tr>
    <th>Date</th>
    <th>Dishes</th>
    <th>Note</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.date %></td>
    <td><%= order.dishes.map(&:name).join(" + ") %></td>
    <td><%= order.note %></td>
  </tr>
  <% end %>
</table>