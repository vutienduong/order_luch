<% unless d.blank? %>
    <div class="row media">
      <div class="media-left">
        <%= render partial: 'layouts/components/image_tag_inline', locals:{image: d.image, size: [60, 60], object: 'dish', options: {alt: "Image"}} %>
      </div>

      <div class="media-body">
        <div class="media-heading"><strong><%= d.name %></strong> (<%= d.price %>)</div>
        <%= d.description %>
      </div>
      <% if is_admin? %>
          <div class="media-right">
            <%= link_to 'Delete', admin_dish_path(d.id),
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %>
          </div>
      <% end %>
    </div>
<% end %>


