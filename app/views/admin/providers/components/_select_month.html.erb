<%= form_for :provider do |f| %>
  <div class="grant-border">
    <div class="form-group">
      <%= f.label :year %>
      <%= f.text_field :year, value: '2018' %>
    </div>
    <div class="form-group">
      <%= f.label :month %>
      <%= select_month(Date.today, add_month_numbers: false) %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :step, value: '1'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Create', class: 'btn btn-default' %>
  </div>
<% end %>
