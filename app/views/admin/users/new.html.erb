<h1>New User</h1>

<%= form_for @user, url: admin_users_path,
  html: {class: "col-md-8 col-xs-12"} do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control", placeholder: "Enter password" %>
  </div>

  <div class="form-group">
    <%= f.label :slack_name %>
    <%= f.text_field :slack_name, class: "form-control", placeholder: "Enter slack name"  %>
  </div>

  <div class="form-group">
    <%= f.label :admin do %>
      <%= f.check_box(:admin, {}, 1, 0) %> Is admin?
    <% end %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
