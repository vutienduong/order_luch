<h1>[Admin] Edit Menu</h1>
<%= form_for @menu, url: admin_menu_path do |f| %>

    <p><%= f.label :date %></p>
    <p><%= f.datetime_select :date, selected: Time.now %></p> <br>


    <p><%= f.collection_select(:restaurant_ids, Restaurant.all, :id, :name, {:prompt => "Select Restaurant"}, {:multiple => true}) %></p>

    <p><%= f.submit %></p>
<% end %>