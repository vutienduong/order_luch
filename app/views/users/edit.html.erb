<h1>Edit User</h1>
<%= form_for @user, url: user_path do |f| %>
    <p><%= f.label :username %></p>
    <p>
      <%= @user.username %>
    </p>

    <p><%= f.label :email %></p>
    <p>
      <%= @user.email %>
    </p>

    <p><%= f.label :password %></p>
    <p><%= f.text_field :password %></p><br>

    <p><%= f.submit %></p>
<% end %>