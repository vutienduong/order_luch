<h2>
  Order lunch for <span id="date-select-date"><%= @select_date %></span>
  ( <%= additional_info_for_current_date @select_date %> )
</h2>
<div class="row" style="position: relative">
  <div class="col-md-2">
    <%= link_to order_user_path(select_date: @select_date - 1), class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-chevron-left"></span> Previous day
    <% end %>
  </div>
  <div class='col-md-8 col-sm-8'>
    <div class="form-group">
      <div class='input-group date' id='datetimepicker1'>
        <input data-format="yyyy-MM-dd" type="text" class="form-control"/>
        <div class="input-group-btn">
          <button type="button" id="btn-calender" class="btn btn-default" aria-label="Calendar">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </button>
          <button type="button" class="btn btn-default" aria-label="Search">
            <%= link_to order_user_path(current_user), id: "order-search-date", style: "display: table; margin-left: auto; margin-right: auto;" do %>
              <span class="glyphicon glyphicon glyphicon-search"></span> Search
            <% end %>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <%= link_to order_user_path(select_date: @select_date + 1), class: 'btn btn-default' do %>
      Next day <span class="glyphicon glyphicon-chevron-right"></span>
    <% end %>
  </div>
</div>

<% if @locked %>
  <%= render 'users/lock_notify' %>
  <% if is_admin? %>
    <%= render 'users/lock_form' %>
  <% end %>
<% elsif @menu.blank? %>
  <%= render partial: 'menus/request_menu' %>
<% else %>
  <%= render partial: 'order_form' %>
<% end %>
