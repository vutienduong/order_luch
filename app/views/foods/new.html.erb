<h1>Create new order</h1>
<%= form_for(@food) do |f| %>
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>
    <p><%= f.label :description %></p>
    <p><%= f.text_field :description %></p>
    <p><%= f.label :creator %></p>
    <p><%= f.text_field :creator %></p>
    <p><%= f.label :date %></p>
    <p><%= f.datetime_select :date, selected: Time.now %></p>
    <p><%= f.submit %></p>

<% end %>

<%= link_to 'Back', foods_path %>