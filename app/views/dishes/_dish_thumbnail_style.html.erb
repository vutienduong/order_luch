<div class="col-xs-6 col-md-3">
  <div class="thumbnail">
    <%= image_tag r.image_url, onerror: "this.src='#{RestaurantsHelper::IMAGE_DISH_DEFAULT}'", size: "120x120", class: "each-dish-img" %>
    <div class="caption">
      <strong>(<hidden class="each-dish-id"><%= r.id %></hidden>)  <%= link_to r.name, dish_path(r), class:"each-dish-name" %></strong>
      <p class="each-dish-price"><%= r.price %></p>
      <p>
        <span><a class="btn btn-default glyphicon glyphicon-plus" data-price="<%= r.price %>" onclick="addDishToday(this)"></a></span>
      </p>
    </div>
  </div>
</div>